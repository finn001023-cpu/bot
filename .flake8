[flake8]
# Code style standards for multilingual Discord bot
max-line-length = 88
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist

# Naming conventions (supports multilingual)
# Variable names: descriptive snake_case (English or Chinese)
# Function names: verb-based snake_case (English or Chinese)
# Class names: noun-based PascalCase (English or Chinese)
# Constants: UPPER_CASE (English or Chinese)

# Import organization
import-order-style = google
application-import-names = src

# Documentation requirements
require-plugins =
    flake8-docstrings,
    flake8-bugbear,
    flake8-comprehensions

# Docstring standards (Google style, supports multilingual)
docstring-convention = google

# Error codes for code quality
# D401: First line should be in imperative mood
# N801: Class names should use PascalCase
# N802: Function names should be snake_case
# N803: Argument names should be snake_case
