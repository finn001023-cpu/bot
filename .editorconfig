# EditorConfig for multilingual Discord bot code consistency
# Enforces professional coding standards with clear, readable patterns
# Supports both English and Chinese comments and documentation

# top-most EditorConfig file
root = true

# All files - Universal formatting rules
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files - Multilingual formatting
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Support multilingual patterns (IDE integration)
# - Comments can be in English or Chinese
# - Variable names use snake_case (English or Chinese words)
# - Function names use descriptive verbs (English or Chinese)
# - Class names use PascalCase nouns (English or Chinese)
# - String literals for user messages support multiple languages
# - Docstrings follow Google style with multilingual descriptions

# JSON files - Consistent data structure formatting
[*.json]
indent_style = space
indent_size = 2
# Keys use snake_case names (English or Chinese)
# Values support multiple languages for user-facing content

# TOML files - Configuration consistency
[*.toml]
indent_style = space
indent_size = 4
# Section headers use descriptive titles (English or Chinese)
# Keys follow snake_case convention (English or Chinese)

# Markdown files - Documentation standards
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
# Content supports multiple languages
# Headers use sentence case with appropriate language titles
# Code examples follow project Python standards

# YAML files - Configuration files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
# Keys use snake_case (English or Chinese)
# Comments for explanation support multiple languages

# Configuration files - System settings
[*.{ini,cfg}]
indent_style = space
indent_size = 4
# Section headers and comments support multiple languages

# Shell scripts - Automation scripts
[*.sh]
indent_style = space
indent_size = 2
# Comments and variable names support multiple languages

# Batch files - Windows automation
[*.bat]
end_of_line = crlf
# Comments and labels support multiple languages

# Git files - Version control
[.gitignore]
indent_style = space
indent_size = 2
# Comments explaining patterns support multiple languages

# Docker files - Container configuration
[Dockerfile*]
indent_style = space
indent_size = 2
# Instructions and comments support multiple languages

# Requirements files - Dependencies
[requirements*.txt]
indent_style = space
indent_size = 2
# Comments explaining packages support multiple languages
